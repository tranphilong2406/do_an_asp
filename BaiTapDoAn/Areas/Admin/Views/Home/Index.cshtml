@{
    ViewData["Title"] = "Admin Home Page";
}

<div class="row">
    <div class="col-lg-4 col-sm-6">
        <div class="card gradient-1">
            <div class="card-body">
                <h3 class="card-title text-white">Số lượng bài viết</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@ViewBag.NumPost</h2>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fa fa-shopping-cart"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-sm-6">
        <div class="card gradient-2">
            <div class="card-body">
                <h3 class="card-title text-white">Số lượng chuyên mục</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@ViewBag.NumCat</h2>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fa fa-money"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-sm-6">
        <div class="card gradient-3">
            <div class="card-body">
                <h3 class="card-title text-white">Người dùng</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@ViewBag.NumUser</h2>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fa fa-users"></i></span>
            </div>
        </div>
    </div>
    
</div>
